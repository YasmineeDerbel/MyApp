@model MyApp.Models.Response

<h2>Respond to Post</h2>

<form asp-controller="Posts" asp-action="Create" method="post">
    <input type="hidden" asp-for="Postid" value="@Model.Postid" />

    <div class="form-group">
        <label for="contenu">Response Content:</label>
        <textarea class="form-control" id="contenu" name="contenu" rows="3" asp-for="contenu"></textarea>
    </div>

    <button type="submit" class="btn btn-primary">Add Response</button>
</form>
