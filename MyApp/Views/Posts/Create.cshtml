@model MyApp.Models.Post

@{
    ViewData["Title"] = "Add a New Post";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<center>
    <h1>Add a New Post</h1>
</center>


<div class="row">
    <div class="col-md-4 offset-md-4">
        <!-- Center the form -->
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <!-- Hide the id and reponse fields -->
            <div class="form-group">
                <label asp-for="id" class="control-label"></label>
                <input asp-for="id" class="form-control" />
                <span asp-validation-for="id" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="sujet" class="control-label"></label>
                <!-- Larger input field for sujet -->
                <input asp-for="sujet" class="form-control" style="font-size: 3em;" />
                <span asp-validation-for="sujet" class="text-danger"></span>
            </div>

           

            <!-- Change the button text to "Add" and make it larger -->
            <div class="form-group">
                <input type="submit" value="Add" class="btn btn-primary btn-lg" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
